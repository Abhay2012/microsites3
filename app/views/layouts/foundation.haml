!!!
%html
  %head
    %title
      = yield :title
    = render "header_js"
    = stylesheet_link_tag 'app_foundation'
    = csrf_meta_tags
    %meta{ :content => "width=device-width, initial-scale=1.0", :name => "viewport" }
    %meta{ :charset => 'utf-8' }
    %link{ :href => "/assets/favicon.gif", :rel => "shortcut icon" }
    = render "analytics/default"
    -# %link{ :href => 'http://fonts.googleapis.com/css?family=Kite+One|Oxygen', :rel => 'stylesheet', :type => 'text/css' }
  %body{ :id => @action_name, :class => @action_classes }

    .Lapplication-mini
      -# = render 'application/header'

      - if flash[:notice]
        .notice= flash[:notice]
      - if flash[:error]
        .error= flash[:error]
      .c

      = yield
      .c
        
      -# = render 'application/footer'
      = javascript_include_tag "application"
      = render 'add_this_global'