!!!
%html
  %head
    %title
      = yield :title
    = csrf_meta_tags
    %link{ :href => "http://fonts.googleapis.com/css?family=Ubuntu|Indie+Flower", :rel => :stylesheet, :type => 'text/css' }
    %meta{ :content => "width=device-width, initial-scale=1.0", :name => "viewport" }
    %meta{ :charset => 'utf-8' }
    %link{ :href => "/assets/favicon.gif", :rel => "shortcut icon" }
    = render "analytics/default"
  %body{ :id => @action_name, :class => @action_classes }

    .Lapplication-foundation
      
      - if flash[:notice]
        .notice= flash[:notice]
      - if flash[:error]
        .error= flash[:error]
      .c
      = yield
      .c
